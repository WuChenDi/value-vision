{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "root": true,
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!**/dist",
      "!**/build",
      "!**/.next",
      "!**/.out",
      "!**/.out",
      "!src/components/ui/**/*.tsx"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "correctness": {
        "noUnusedImports": "warn"
      },
      "complexity": {
        "noUselessSwitchCase": "warn",
        "noUselessTypeConstraint": "warn"
      },
      "nursery": {
        "noMisusedPromises": "error"
      },
      "performance": {
        "noDelete": "error"
      },
      "suspicious": {
        "noImplicitAnyLet": "warn",
        "noDuplicateObjectKeys": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
